<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bg_color</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="imageButtonStyle">@style/SilentImageButton</item>
        <item name="android:buttonStyle">@style/SilentButton</item>
        <item name="jarvisStyle">@style/SilentButton</item>
        <item name="android:button">@drawable/button_custom</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Transparent" parent="Theme.AppCompat">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Theme.NoActionBar" parent="Theme.AppCompat">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="SilentImageButton" parent="Base.Widget.AppCompat.ImageButton">
        <item name="android:scaleType">fitXY</item>
        <item name="android:soundEffectsEnabled">false</item>
        <item name="android:adjustViewBounds">false</item>
        <item name="android:background">@color/transparent</item>
        <item name="background">@color/transparent</item>
    </style>

    <style name="SilentButton" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/button_custom</item>
        <item name="android:soundEffectsEnabled">false</item>
    </style>

    <style name="MenuButton" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/menu_text_color</item>
        <item name="android:soundEffectsEnabled">false</item>
    </style>

</resources>
